<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneOTPActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="36dp"
            >


           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:layout_gravity="center_horizontal"
            android:textSize="22sp"
            android:textColor="@color/colorAccent"
             />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_phonemessage"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="34dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your phone number"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We will send you an OTP message"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_color_black"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/introgradient"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="44dp">

          <Spinner
              android:layout_marginTop="24dp"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:textAlignment="center"
              android:id="@+id/spinner_counry_code"/>

           <View
               android:layout_width="190dp"
               android:layout_height="2dp"
               android:layout_gravity="center_horizontal"
               android:background="@android:color/white"
               />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:layout_gravity="center_horizontal"
                android:textColorHint="@android:color/white"
                android:backgroundTint="@android:color/white"
                android:textAlignment="center"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/button_sendOTP"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="SEND OTP"
                android:textSize="18sp"
                android:layout_marginTop="32dp"
                android:background="@drawable/roundedbackground"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>