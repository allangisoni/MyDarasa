<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:id="@+id/rlTimetable"
        >

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="8dp"
        android:id="@+id/tvStartTime"/>


        <View
            android:id="@+id/view"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tvStartTime"
            android:layout_width="4dp"
            android:layout_height="64dp" />

        <TextView
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:id="@+id/tvendTime"
            android:layout_below="@id/tvStartTime"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/view"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:id="@+id/tvsubjectName"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:id="@+id/ivTutor"
            android:src="@drawable/ic_person"
            android:layout_below="@+id/tvsubjectName"
            android:layout_toRightOf="@id/view"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            />
         <TextView
             android:id="@+id/tvTutor"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:layout_marginTop="8dp"
             android:layout_toRightOf="@id/ivTutor"
             android:layout_below="@id/tvsubjectName"
             android:textColor="@android:color/black"/>


    </RelativeLayout>

</RelativeLayout>